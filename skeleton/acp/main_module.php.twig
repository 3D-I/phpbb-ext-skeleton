namespace {{ EXTENSION.vendor_name }}\{{ EXTENSION.extension_name }}\acp;

/**
 * {{ EXTENSION.extension_display_name }} ACP module.
 */
class main_module
{
	public $page_title;
	public $tpl_name;
	public $u_action;

	public function main($id, $mode)
	{
		global $config, $request, $template, $user;

		$user->add_lang_ext('{{ EXTENSION.vendor_name }}/{{ EXTENSION.extension_name }}', 'common');
		$this->tpl_name = 'acp_{{ EXTENSION.extension_name|lower }}_body';
		$this->page_title = $user->lang('ACP_{{ EXTENSION.extension_name|upper }}_TITLE');
		add_form_key('{{ EXTENSION.vendor_name|lower }}_{{ EXTENSION.extension_name|lower }}_acp');

		if ($request->is_set_post('submit'))
		{
			if (!check_form_key('{{ EXTENSION.vendor_name|lower }}_{{ EXTENSION.extension_name|lower }}_acp'))
			{
				trigger_error('FORM_INVALID', E_USER_WARNING);
			}

			$config->set('{{ EXTENSION.vendor_name|lower }}_{{ EXTENSION.extension_name|lower }}_goodbye', $request->variable('{{ EXTENSION.vendor_name|lower }}_{{ EXTENSION.extension_name|lower }}_goodbye', 0));

			trigger_error($user->lang('ACP_{{ EXTENSION.extension_name|upper }}_SETTING_SAVED') . adm_back_link($this->u_action));
		}

		$template->assign_vars(array(
			'U_ACTION'				=> $this->u_action,
			'{{ EXTENSION.vendor_name|upper }}_{{ EXTENSION.extension_name|upper }}_GOODBYE'		=> $config['{{ EXTENSION.vendor_name|lower }}_{{ EXTENSION.extension_name|lower }}_goodbye'],
		));
	}
}
