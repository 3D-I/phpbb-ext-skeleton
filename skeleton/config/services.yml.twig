{% if COMPONENT.service %}
imports:
    - { resource: parameters.yml }
{% endif %}

services:
{% if COMPONENT.controller %}
    {{ EXTENSION.vendor_name }}.{{ EXTENSION.extension_name }}.controller:
        class: {{ EXTENSION.vendor_name }}\{{ EXTENSION.extension_name }}\controller\main
        arguments:
            - '@config'
            - '@controller.helper'
            - '@template'
            - '@user'

{% endif %}
{% if COMPONENT.service %}
    {{ EXTENSION.vendor_name }}.{{ EXTENSION.extension_name }}.service:
        class: {{ EXTENSION.vendor_name }}\{{ EXTENSION.extension_name }}\service
        arguments:
            - '@user'
            - '%{{ EXTENSION.vendor_name }}.{{ EXTENSION.extension_name }}.tables.{{ EXTENSION.extension_name|lower }}_table%'

{% endif %}
{% if COMPONENT.phplistener or COMPONENT.controller %}{# controller component uses the phplistener too #}
    {{ EXTENSION.vendor_name }}.{{ EXTENSION.extension_name }}.listener:
        class: {{ EXTENSION.vendor_name }}\{{ EXTENSION.extension_name }}\event\main_listener
{% if COMPONENT.controller %}
        arguments:
            - '@controller.helper'
            - '@template'
            - '@user'
            - '%core.php_ext%'
{% endif %}
        tags:
            - { name: event.listener }

{% endif %}
{% if COMPONENT.console %}
    {{ EXTENSION.vendor_name }}.{{ EXTENSION.extension_name }}.command.{{ EXTENSION.extension_name|lower }}:
        class: {{ EXTENSION.vendor_name }}\{{ EXTENSION.extension_name }}\console\command\{{ EXTENSION.extension_name|lower }}
        arguments:
            - '@user'
        tags:
            - { name: console.command }

{% endif %}
{% if COMPONENT.cron %}
    {{ EXTENSION.vendor_name }}.{{ EXTENSION.extension_name }}.cron.task.{{ EXTENSION.extension_name|lower }}:
        class: {{ EXTENSION.vendor_name }}\{{ EXTENSION.extension_name }}\cron\task\{{ EXTENSION.extension_name|lower }}
        arguments:
            - '@config'
        calls:
            - [set_name, [{{ EXTENSION.vendor_name }}.{{ EXTENSION.extension_name }}.cron.task.{{ EXTENSION.extension_name|lower }}]]
        tags:
            - { name: cron.task }

{% endif %}
{% if COMPONENT.notification %}
    {{ EXTENSION.vendor_name }}.{{ EXTENSION.extension_name }}.notification.type.{{ EXTENSION.extension_name|lower }}:
        class: {{ EXTENSION.vendor_name }}\{{ EXTENSION.extension_name }}\notification\type\{{ EXTENSION.extension_name|lower }}
{% if REQUIREMENTS.phpbb_version_min matches '/^[\\D]*3\\.1.*$/' %}{# for phpBB 3.1.x #}
        scope: prototype # scope MUST be prototype for this to work!
        arguments:
            - '@user_loader'
            - '@dbal.conn'
            - '@cache.driver'
            - '@user'
            - '@auth'
            - '@config'
            - '%core.root_path%'
            - '%core.php_ext%'
            - '%tables.notification_types%'
            - '%tables.notifications%'
            - '%tables.user_notifications%'
{% else %}{# for phpBB > 3.2.x #}
        shared: false # service MUST not be shared for this to work!
        parent: notification.type.base
{% endif %}
        calls:
            - [set_controller_helper, ['@controller.helper']]
        tags:
            - { name: notification.type }

{% endif %}
